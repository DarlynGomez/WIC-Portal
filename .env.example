# WIC Portal Environment Config

# Database Configuration (EDIT HERE)
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=project_db
DB_CHARSET=utf8mb4

# Application Settings
APP_NAME="WIC Portal"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/wic-portal/src

# Session Configuration
SESSION_LIFETIME=3600
SESSION_NAME=wic_portal_session
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Email Configuration (for future use)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=wic-portal@bmcc.cuny.edu
MAIL_FROM_NAME="WIC Portal"

# External API Keys (for future integrations)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Notification Settings
NOTIFICATION_DAYS_DEFAULT=3
EMAIL_NOTIFICATIONS_ENABLED=false

# Backup and Maintenance
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false